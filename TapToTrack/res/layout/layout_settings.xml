<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="fill_parent" android:orientation="vertical" android:id="@+id/settingslayout">

    <TextView
        android:id="@+id/iplabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iptext"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_gravity="center"
        android:gravity="center"/>

    <EditText
        android:id="@+id/iptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textWebEditText"
        android:longClickable="true">
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/savebtn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="@string/save" />
    
</LinearLayout>